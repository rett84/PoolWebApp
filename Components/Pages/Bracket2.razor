@page "/bracket2"

<h3>Bracket2</h3>

<div class="tournament">
    <!-- Left Side -->
    <div class="bracket left">
        <div class="round">
            <div class="match">Team A vs Team B</div>
            <div class="match">Team C vs Team D</div>
        </div>

        <div class="round">
            <div class="match">Winner 1 vs Winner 2</div>
        </div>
    </div>

